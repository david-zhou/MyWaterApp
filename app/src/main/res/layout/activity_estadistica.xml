<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.dzt.mywaterapp.Estadistica">

    TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tiempo calculado"
        android:id="@+id/Txt_tiempoCalculado"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver a calcular"
        android:id="@+id/Btn_volverCalcular"
        android:layout_marginTop="84dp"
        android:layout_below="@+id/Txt_tiempoCalculado"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Borrar Preferences"
        android:id="@+id/Btn_BorrarPreferences"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/Btn_volverCalcular"
        android:layout_alignEnd="@+id/Btn_volverCalcular" />
</RelativeLayout>
